{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 400,
  "title": "CO2 Emission per Capita in Different Countries",
  "data": {
    "url": "https://raw.githubusercontent.com/yu00anne/FIT3179-Assignment2/master/js/world_topo.geo.json",
    "format": {"type": "topojson", "feature": "world.geo"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "layer": [
    {
    "transform": [
      {"calculate": "'Data is not available in ' + datum.properties.name", "as": "note"}
    ],
    "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
    "encoding": {
      "tooltip": {
        "field": "note"
      }
      }
    },
    {
    "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yu00anne/FIT3179-Assignment2/master/data/CO2Emission_LifeExp.csv"
        },
        "key": "Country",
        "fields": ["Percapita", "Population", "Continent"]
      }
    },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "selection": {
    "country_highlight": {
    "type": "multi",
    "fields": ["properties.name"],
    "bind": "legend"
    }
  },
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Percapita",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "scheme": "goldred"
  }
    },
    "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "Percapita", "type": "quantitative", "title": "CO2 Emissions perCapita / tons"}
        ]
  }
  }]
}