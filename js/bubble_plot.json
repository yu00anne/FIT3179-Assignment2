{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "CO2 Emissions VS Population of Different Countries",
  "data": {
    "url": "https://raw.githubusercontent.com/yu00anne/FIT3179-Assignment2/master/data/CO2Emission_LifeExp.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1400000000,
        "step": 10000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"calculate": "datum.CO2Emissions/datum.Population * 10000", "as": "CO2Emissions per 10 000 Population"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
    {"filter": "datum.Population > Population_Above"}
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "axis": {"tickCount": 20},
      "scale": {"type": "log", "domain": [2000, 2000000000]}
    },
    "y": {
      "field": "CO2Emissions",
      "type": "quantitative",
      "title": "CO2 Emissions",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [1000, 11000000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "CO2Emissions",
            "type": "quantitative", "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "CO2Emissions",
            "type": "quantitative", "format": ","
          }
        ]
      }
    }
  ]
}